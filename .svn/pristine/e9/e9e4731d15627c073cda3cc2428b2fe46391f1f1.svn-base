/*Styles for datatables*/
.dataTables_filter {
    margin-bottom: 10px;
}
.dataTables_wrapper thead {
    background-color: #db6449;
    width:100%;
}
table.display thead th {
    /*font-family: 'BebasNeueRegular';*/
    font-family: 'Calibri';
    font-size: 16px;
    font-weight: normal;
    color: black;
    border: none;
    padding: 10px;
    padding-left: 20px; /****/
    cursor: default;
    line-height: 1;
    outline: none;
}
.dataTables_wrapper tbody tr:hover {
    background-color: #93C6DE;
    cursor: pointer;
}
.dataTables_wrapper tbody tr.odd {
    background-color: #f8B096;
}

.dataTables_wrapper tbody tr.even{
    background-color: #E7DDD8;
}
table.display td {
    padding: 5px 20px; /****/
    font-family: 'OpenSans-Regular', sans-serif;
    font-size: 12px;
    color: black;
}

/*Styles for forms*/
label {
    font-family: 'OpenSans-Regular', sans-serif;
}
.validation_msg {
    font-weight: bold;
    display:inline-block;
    color: #DD4444;
    margin-left:10px;
}
.pickadate {
    
    line-height: 1;
    margin-top: 1px;
    vertical-align: middle;
}
.pickadate .form-control {
    width: 115px;
    display: inline-block;
}
.add-on {
    display: inline-block;
    margin-right: 10px;
    cursor:pointer;
}
.add-on .glyphicon-calendar {
    font-size: 24px;
    top: 6px;
}
.btn-file {
    position:relative;
    overflow: hidden;
}
.btn-file input {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
}
/*Styles for modals*/
.modal .modal-content {
    background-color: #e6e7e8;
}
.modal .modal-header {
    padding-bottom:0;
}

