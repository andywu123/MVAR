@model FieldTool.Models.FileModel
@{
    ViewBag.Title = "Create Accident Report";
    string viewBagType = ViewBag.Type;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header" style="
    margin-left: 5%">
    <h3 class="contentTitle">Create Accident Report</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Content("~")Home/Index">Home</a></li>
        </ol>
    </nav>
</div>

<img class="testSite" src="~/Content/images/watermark-test.png" alt="" />
<div id="accidentFormContainer" class="container">
    <div class="row top-buffer">
        <div class="col-sm-12">
            <form id="accidentForm" class="col-sm-12">
                <fieldset>
                    <legend>Accident Information</legend>
                    <div class="form-group">
                        <label for="">CSR Number</label>
                        <input type="text" class="form-control" id="report_CSRNumber_Edit" name="report_CSRNumber_Edit" maxlength="80" />
                    </div>

                    <div class="form-group">
                        <input type="checkbox" class="form-check-input" id="chk_sup_response_edit" name="chk_sup_response_edit">
                        <label class="form-check-label" for="chk_sup_response_edit">Supervisor Responded To Scene</label>                      
                    </div>

                    <div class="form-group">                     
                        <input type="checkbox" class="form-check-input" id="chk_safetyOfficer_response_edit" name="chk_safetyOfficer_response_edit">
                        <label class="form-check-label" for="chk_safetyOfficer_response_edit">Safety Officer Responded To Scene</label>
                    </div>

                    <div class="form-group">                      
                        <input type="checkbox" class="form-check-input" id="chk_photoTaken_edit" name="chk_photoTaken_edit">
                        <label class="form-check-label" for="chk_photoTaken_edit">Photo Taken</label>
                    </div>

                    <div class="form-group">                       
                        <input type="checkbox" class="form-check-input" id="chk_seatBelt_edit" name="chk_seatBelt_edit">
                        <label class="form-check-label" for="chk_seatBelt_edit">Seat Belt In Use</label>
                    </div>

                    <div class="form-group">                      
                        <input type="checkbox" class="form-check-input" id="chk_PCDPossession_edit" name="chk_PCDPossession_edit">
                        <label class="form-check-label" for="chk_PCDPossession_edit">PCD In City Driver Possession</label>
                    </div>
                    <div class="form-group">                      
                        <input type="checkbox" class="form-check-input" id="chk_PCDInUse_edit" name="chk_PCDInUse_edit">
                        <label class="form-check-label" for="chk_PCDInUse_edit">PCD In Use</label>
                    </div>

                    <div class="form-group">
                        <label>Control1 Call Time</label>
                        <input type="datetime-local" class="form-control" id="Control1Call_Time" name="Control1Call_Time"/>
                    </div>

                    <div class="form-group">
                        <label for="">Exact Date and Hour of Accident *</label>
                        <div class="validation_msg" id="report_accidentTime_validation"></div>
                        <input type="datetime-local" class="form-control" id="report_accidentTime_Edit" name="report_accidentTime_Edit" />
                    </div>

                    <div class="form-group">
                        <label for="">Police Report Number</label>
                        <input type="text" class="form-control" id="report_PoliNumber_Edit" name="report_PoliNumber_Edit" maxlength="80" />
                    </div>

                    <div class="form-group">
                        <label for="">Accident Location  *</label>
                        <div class="validation_msg" id="report_AccidentLoc_validation"></div>
                        <input type="text" class="form-control" id="report_AccidentLoc_Edit" name="report_AccidentLoc_Edit" maxlength="200" />
                    </div> 
                    
                    <p>(*) Mandatory</p>
                </fieldset>
            </form>

        </div>


    </div>

    <div class="row top-buffer">

        <div class="col-sm-4">
            <button id="btn_submitAccdForm" class="btn btn-success" type=button>Create New Report</button>
        </div>
        <div class="col-sm-8 invisible">
            <button id="btn_OpenSyncDlg" class="btn btn-primary col-sm-4" type=button>Sync Form Data</button>
        </div>
    </div>

</div>
